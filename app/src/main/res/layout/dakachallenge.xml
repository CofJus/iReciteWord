<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    /*-->
    <!--    * Created by 张佳豪 on 5.27-->
    <!--    */-->
    <ImageButton
        android:id="@+id/dakachallengeback"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/打卡挑战"
        android:background="@mipmap/arrowback"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/dakachallengeback"
        android:layout_toRightOf="@+id/dakachallengeback"
        android:layout_marginTop="5dp"
        android:text="@string/打卡挑战"
        android:textSize="30sp"
        android:textColor="#000"/>
    <ImageView
        android:id="@+id/top_picture"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/打卡挑战"
        android:background="@mipmap/top_dakachallenge"
        />
    <RelativeLayout
        android:id="@+id/challenge_choices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_picture"  >
    </RelativeLayout>
    <Button
        android:id="@+id/打卡挑战一"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/top_picture"
        android:text="每月挑战"
        android:textSize="25sp"
        android:background="@drawable/shape_page_home" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="设置你的本月目标"
        android:layout_marginTop="210dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="250dp"
        android:orientation="horizontal">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:orientation="vertical">
            <TextView
                android:id="@+id/five"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="5天"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/ten"
                android:layout_width="300dp"
                android:layout_height="50dp"

                android:text="10天"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center">

            </TextView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/fifteen"
            android:text="15天"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center">

        </TextView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="20天"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center">

        </TextView>
            </LinearLayout>


        <RadioGroup
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </RadioButton>
            <RadioButton
                android:id="@+id/rb_2"
                android:layout_width="100dp"
                android:layout_height="50dp">

            </RadioButton>
            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/rb_3"
                >

            </RadioButton>
            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/rb_4">

            </RadioButton>
        </RadioGroup>


    </RelativeLayout>
    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_marginTop="450dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="31"
        android:progress="0"
        android:progressDrawable="@drawable/progressbar_shape" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="480dp"
        android:text="距离您本月目标还剩20天\n继续加油！"
        android:textSize="25sp"
        android:gravity="center">

    </TextView>

</RelativeLayout>