<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
            android:background="#FFFFFF"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton

            android:id="@+id/back5"
            android:layout_width="39dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/arrowback" />

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="26dp"
            android:text="2017年7月"
            android:textColor="#0044BB" />
        <TextView
            android:id="@+id/searchTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="(点击日期可查询历史)"
            android:textColor="#888888" />
    </LinearLayout>

    <LinearLayout
            android:weightSum="7"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <TextView style="@style/week"
                android:text="日"/>
        <TextView style="@style/week"
                android:text="一"/>
        <TextView style="@style/week"
                android:text="二"/>
        <TextView style="@style/week"
                android:text="三"/>
        <TextView style="@style/week"
                android:text="四"/>
        <TextView style="@style/week"
                android:text="五"/>
        <TextView style="@style/week"
                android:text="六"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_1px"/>

    <com.hhu.ireciteword.view.SignGridView
        android:id="@+id/gvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="7">
    </com.hhu.ireciteword.view.SignGridView>
</LinearLayout>